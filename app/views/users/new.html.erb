

<div class="mainRegister">
<h2 class="textReg">Register form</h2>
<h3>Please enter the following information</h3>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <h3><%= t('validation_errors', count: @user.errors.count) %></h3>


    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
<br/>
  <table align="center"class="tableRegister" > 
   <tr> 
    <td class="tabletd"><%= f.label :name %></td>
    <td class="tabletd"> <%= f.text_field :name %></td>
  </tr>
 
  <tr> 
    <td class="tabletd"><%= f.label :surname %></td>
    <td class="tabletd"><%= f.text_field :surname %></td>
  </tr>
  

  <tr>
    <td class="tabletd"><%= f.label :company %></td>
    <td class="tabletd"><%= f.text_field :company %></td>
  </tr>

 <tr>
   <td class="tabletd"> <%= f.label :email %></td>
   <td class="tabletd"><%= f.email_field :email %></td>
  </tr>

  <tr>
    <td class="tabletd"><%= f.label :username %></td>
    <td class="tabletd"><%= f.text_field :username %></td>
  </tr>

  <tr>
    <td class="tabletd"><%= f.label :password %></td>
    <td class="tabletd"><%= f.password_field :password %></td>
  </tr>

  <tr>
    <td class="tabletd"><%= f.label :password_confirmation %></td>
    <td class="tabletd"><%= f.password_field :password_confirmation %></td>
  </tr>
 </table>
  
    <p style="padding-top:30px; text-align:center"><%= f.submit class: 'btn btn-primary btn-md' %></p>
  
</div>
<% end %>